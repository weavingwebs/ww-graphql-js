{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "target": "es5",
    "module": "CommonJS",
    "jsx": "react",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["dom", "es2015", "es2016"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
